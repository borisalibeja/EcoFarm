generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


enum Role {
  CUSTOMER
  FARMER
  ADMIN
}

enum ProductCategory {
  BULMET
  MISH
  VEZ
  PERIME
  FRUTA
  HOMEMADE
  ALKOL
}

model User {
  userId        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  username      String   @unique
  password      String
  firstName     String?
  lastName      String?
  role          Role
  contactInfo   String?

}

model Farm {
  farmId      String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String   @unique
  location    String?
  description String?

  products    Product[] @relation("FarmProducts")
}

model Product {
  productId   String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  productName String
  category    String
  price       String

  farmId      String?  @db.ObjectId
  farm        Farm?    @relation("FarmProducts", fields: [farmId], references: [farmId])

}
